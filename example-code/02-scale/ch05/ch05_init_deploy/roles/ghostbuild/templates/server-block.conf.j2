server {
  listen {{ ansible_eth0.ipv4.address }}:80;
  #listen [::]:80 default_server ipv6only=on;

  access_log /var/log/nginx/access.log;
  client_max_body_size  20m;

  root {{ doc_root }};

  server_name {{ server_name }} {{ server_alias }};

  location / {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header HOST $http_host;

    # if you are using another type of server running locally and listening on specified port, use the following section.
    proxy_pass http://127.0.0.1:{{ ghost_port }};
  }
}
